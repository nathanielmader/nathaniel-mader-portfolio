@model IEnumerable<CarMast.Models.DataModels.Vehicle>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h2>Sales</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form class="form-inline" id="salesSearchForm" style="border: 2px solid black; padding: 10px">
            <div class="row">
                <p>Quick Search</p>
            </div>
            <div class="row">
