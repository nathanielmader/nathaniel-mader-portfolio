@model IEnumerable<CARMASTERY.Models.DataModels.Vehicle>

@{
                ViewBag.Title = "Home Page";
}

<h2>Index</h2>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <a href='@Url.Action("Special", "Home")'>
                <img src='@Url.Content("~/Images/Special1.png")' style="width: 50%; margin: auto" />
            </a>
        </div>

        <div class="item">
            <a href='@Url.Action("Special", "Home")'>
                <img src='@Url.Content("~/Images/Special2.png")' style="width: 50%; margin: auto" />
            </a>
        </div>

        <div class="item">
            <a href='@Url.Action("Special", "Home")'>
                <img src='@Url.Content("~/Images/Special3.png")' style="width: 50%; margin: auto" />
            </a>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />

<!--Want to be a listed only if checkbox Admin/Edit Page-->
<div class="row">
    <div class="col-md-12">
        <h2>Featured Vehicles</h2>
        @foreach (var vehicle in Model)
        {
            <div class="col-md-3">
                <img src="@Url.Content("~/Images/" + vehicle.ImageFileName)" />
                <p>@vehicle.Year, @vehicle.Model.Make.MakeDescription, @vehicle.Model.ModelDescription</p>
                <p>@vehicle.SalePrice.ToString("c")</p>
            </div>
        }
    </div>
</div>

