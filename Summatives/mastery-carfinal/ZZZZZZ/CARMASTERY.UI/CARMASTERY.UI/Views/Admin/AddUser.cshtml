@model CARMASTERY.UI.Models.ViewModels.UserViewModel

@{
    ViewBag.Title = "AddUser";
}

<br />
<div class="row">
    <div class="col-md-12">
        <h1>Add User</h1>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
        {
        @Html.ValidationSummary()
            <div class="col-md-5">
                <div class="form-group">
                    <label>First Name</label>
                    @Html.TextBoxFor(m => m.User.FirstName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.User.FirstName)</span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.User.Email)</span>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.TextBoxFor(m => m.User.Password, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.User.Password)</span>
                </div>
                <button type="submit" class="btn-btn-sm btn-primary">Save</button>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label>Last Name</label>
                    @Html.TextBoxFor(m => m.User.LastName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.User.LastName)</span>
                </div>
                <div class="form-group">
                    <label>Role</label>
                    @Html.DropDownListFor(m => m.User.Role, Model.RolesList, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.User.Role)</span>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    @Html.TextBoxFor(m => m.User.ConfirmPassword, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.User.ConfirmPassword)</span>
                </div>
            </div>
        }
    </div>
</div>

