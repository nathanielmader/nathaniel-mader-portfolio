@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "AddCourse";
}
<div class="row">
    <div class="col-xs-12">
        <h2>AddCourse</h2>
        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
        <div class="form-group">
            <label>Course Name</label>
            @Html.TextBoxFor(c => c.CourseName, new { @class = "form-control", placeholder = "CourseName" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.CourseName)</span>
        </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>

