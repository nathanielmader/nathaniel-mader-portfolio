@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "DeleteCourse";
}
<div class="row">
    <div class="col-xs-12">
        <h2>DeleteCourse</h2>
        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(c=>c.CourseId)
            <p>Are you sure you want to delete the course @Html.DisplayFor(c=>c.CourseName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Courses", "Admin", null, new { @class = "btn btn-sm btn-info"})
        }
    </div>
</div>

