@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col-xs-12">
        <h2>Delete Student</h2>
        @Html.ActionLink("Return to List", "Majors", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m=>m.Student.StudentId)
            <p>Are you sure you want to delete the student @Html.DisplayFor(m=>m.Student.FirstName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info"})
        }
    </div>
</div>

